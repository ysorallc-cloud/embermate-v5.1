{
  "expo": {
    "name": "EmberMate",
    "slug": "embermate",
    "version": "5.8.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "embermate",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "description": "Secure personal health companion for medication management, appointment tracking, and family care coordination. All your health data stays private on your device.",
    "primaryColor": "#FF8C94",
    "backgroundColor": "#051614",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#243028"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.embermate.app",
      "buildNumber": "1",
      "config": {
        "usesNonExemptEncryption": true
      },
      "infoPlist": {
        "NSCameraUsageDescription": "EmberMate needs camera access to take photos of medications, wounds, and medical documents.",
        "NSPhotoLibraryUsageDescription": "EmberMate needs photo library access to select images of medications, wounds, and medical documents.",
        "NSFaceIDUsageDescription": "EmberMate uses Face ID to securely protect your sensitive health information.",
        "NSHealthShareUsageDescription": "EmberMate can read health data to help track your wellness (optional).",
        "NSHealthUpdateUsageDescription": "EmberMate can write health data to your Health app (optional).",
        "NSMicrophoneUsageDescription": "EmberMate uses the microphone for voice notes about symptoms and medications (optional).",
        "NSLocationWhenInUseUsageDescription": "EmberMate uses your location to find nearby pharmacies and medical facilities (optional).",
        "UIBackgroundModes": [
          "remote-notification"
        ],
        "ITSAppUsesNonExemptEncryption": true
      },
      "associatedDomains": [
        "applinks:embermate.com"
      ]
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#243028"
      },
      "package": "com.embermate.app",
      "versionCode": 2,
      "playStoreUrl": "https://play.google.com/store/apps/details?id=com.embermate.app",
      "permissions": [
        "CAMERA",
        "READ_MEDIA_IMAGES",
        "READ_EXTERNAL_STORAGE",
        "USE_BIOMETRIC",
        "USE_FINGERPRINT",
        "POST_NOTIFICATIONS",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED",
        "SCHEDULE_EXACT_ALARM"
      ],
      "blockedPermissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "RECORD_AUDIO",
        "READ_CONTACTS",
        "READ_CALL_LOG",
        "READ_SMS"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#FF8C94",
          "sounds": []
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "EmberMate needs access to your photos to document medications, wounds, and medical records.",
          "cameraPermission": "EmberMate needs camera access to take photos of medications, wounds, and medical documents."
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "EmberMate uses Face ID to securely protect your sensitive health information."
        }
      ],
      "expo-secure-store",
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "buildToolsVersion": "35.0.0"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "c1c2cfb3-2d20-485c-9e9d-29a53d853228"
      },
      "router": {
        "origin": false
      },
      "privacyPolicyUrl": "https://embermate.com/privacy",
      "termsOfServiceUrl": "https://embermate.com/terms",
      "supportUrl": "https://embermate.com/support",
      "helpUrl": "https://embermate.com/help",
      "legalUrls": {
        "privacy": "https://embermate.com/privacy",
        "terms": "https://embermate.com/terms",
        "dataRequest": "https://embermate.com/data-request",
        "dataDeletion": "https://embermate.com/data-deletion"
      },
      "security": {
        "encryption": "AES-256",
        "localStorage": true,
        "noExternalServers": true,
        "hipaaCompliant": true
      },
      "features": [
        "medication-tracking",
        "appointment-management",
        "family-care-coordination",
        "biometric-security",
        "encrypted-storage",
        "local-only-data",
        "medication-reminders",
        "vitals-tracking",
        "symptom-logging",
        "care-summaries"
      ]
    }
  }
}
